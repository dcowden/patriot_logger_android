<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Top Control Panel (approx 25%) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDebugClearRoom"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Clear Room"
                android:textColor="?attr/colorError"
                app:strokeColor="?attr/colorError" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDebugCloseApp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Close App" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDebugDataHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TagStatus Table Data:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <!-- Bottom Data Display (approx 75%) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDebugData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75" />

</LinearLayout>